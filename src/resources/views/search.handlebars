<div class="mt-4">
    <form method="POST">
        <div class="form-group">
            <label for="search-input">Tìm kiếm</label>
            <input class="form-control me-2" name="q" id="search-input" type="search" placeholder="Nhập từ khóa..." aria-label="Search">
        </div>
         <div class="form-group">
            <label for="gender-input">Lựa chọn giới tính</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">-- Select gender</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>
        </div>
        </br>
        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
    </form>
</div>
